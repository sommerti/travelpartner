<% if controller.class == WelcomeController && controller.action_name == 'index' %>
    <nav class="navbar landing-page-menu">
<% else %>
    <nav class="navbar navbar-inverse">
<% end %>

  <div class="container-fluid narrower-nav-top">

    <%= render "layouts/logo" %>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      
      <ul class="nav navbar-nav">
        
        <!-- display roll-over highlight if current page -->
        <li class=
          <% if controller.class == CountriesController && controller.action_name == 'index' %>
            "active"
          <% end %>
        >
          <%= link_to 'All Countries', countries_path%>
        </li>
  

      </ul>


  
      <p class="navbar-text navbar-right">
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "navbar-link" %>
      </p>
        
      <!-- display user info -->  
      <% if !current_user.firstname.nil? %>
        <p class="navbar-text navbar-right signed-in-as-link">Signed in as <%= link_to truncate("#{current_user.firstname} #{current_user.lastname}", length: 30), current_user %></p>
      <% elsif !current_user.email.nil? %>
        <p class="navbar-text navbar-right signed-in-as-link">Signed in as <%= link_to truncate(current_user.email, length: 30), current_user %></p>
      <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>