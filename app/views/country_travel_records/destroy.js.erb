// #notice intially has a hidden class; on success ajax, 
// remove the class, show it, then fade it out

$("#ajaxmsg").html("<%= flash[:notice] %>");

$("#ajaxloader").removeClass("hidden");
$("#ajaxloader").show();

setTimeout(function() {
	$("#ajaxloader").hide();
	$("#ajaxmsg").removeClass("hidden");
	$('#ajaxmsg').show();
}, 2000);

setTimeout(function() {
    $('#ajaxmsg').fadeOut('slow');
}, 4000);
